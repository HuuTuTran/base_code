<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_attachment_form" model="ir.ui.view">
        <field name="name">attachment form</field>
        <field name="model">chat_application.attachment</field>
        <field name="arch" type="xml">
            <form string="attachment">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="attachment name" />
                        </h1>
                    </div>
                    <group>
                        <field name="path" placeholder="attachment path" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>